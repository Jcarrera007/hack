package templates

templ IndexPage(title string, message string) {
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>{ title }</title>
		<link href="/static/css/style.css" rel="stylesheet"/>
	</head>
	<body>
		<div class="container">
			<header>
				<h1>Welcome to Goodoo</h1>
				<p class="subtitle">Echo + Templ Framework</p>
			</header>
			<main>
				<div class="card">
					<h2>{ title }</h2>
					<p>{ message }</p>
					<div class="features">
						<div class="feature">
							<h3>🚀 Fast</h3>
							<p>Built with Echo framework for high performance</p>
						</div>
						<div class="feature">
							<h3>📝 Templated</h3>
							<p>Using templ for type-safe HTML templates</p>
						</div>
						<div class="feature">
							<h3>🎨 Styled</h3>
							<p>Clean and modern UI design</p>
						</div>
					</div>
				</div>
			</main>
			<footer>
				<p>&copy; 2024 Goodoo - Built with Echo and Templ</p>
			</footer>
		</div>
	</body>
	</html>
}